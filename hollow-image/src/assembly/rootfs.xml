<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>rootfs</id>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--
            Directories may have permissions, owner and group in TAR only if they are added as TAR entries.
            Below 2 file sets add emtpy directories explicitly to ensure that TAR directory entries are created.
        -->
        <fileSet>
            <!--
                This file set adds directory TAR entries corresponding to the following tree:

                app (0555 root:root)
                │
                ├─── bin (0555 root:root)
                │
                └─── template (0555 root:root)
            -->
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <excludes>
                <exclude>**/*.*</exclude>
            </excludes>
            <includes>
                <include>app</include>
                <include>app/bin</include>
                <include>app/template</include>
            </includes>
            <directoryMode>0555</directoryMode>
        </fileSet>
        <fileSet>
            <!--
                This file set adds directory TAR entries corresponding to the following tree:

                app
                │
                └─── config (0777 root:root)
            -->
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <excludes>
                <exclude>**/*.*</exclude>
            </excludes>
            <includes>
                <include>app/config</include>
            </includes>
            <directoryMode>0777</directoryMode>
        </fileSet>
        <!--
            After previous file sets we have TAR entries corresponding to the following tree
            (no files - only empty directories):

            app (0555 root:root)
            │
            ├─── bin (0555 root:root)
            │
            ├─── config (0777 root:root)
            │
            └─── template (0555 root:root)
        -->
        <fileSet>
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <includes>
                <include>app/bin/*.py</include>
                <include>app/template/*.j2</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <fileMode>0444</fileMode>
        </fileSet>
        <!--
            If below file sets add the same directory(s) as mentioned by previous (see above) file sets
            then it is considered as duplicate and does not override permissions, owner and group of directory
            specified in previous file sets, i.e. such directory is not added as new TAR directory entry,
            but if directory contains files then new TAR file entries are still created (files are still added).
        -->
        <fileSet>
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <includes>
                <include>app/config/*.properties</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <fileMode>0666</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory/>
            <directory>src/main/resources/rootfs</directory>
            <includes>
                <include>app/bin/*.sh</include>
            </includes>
            <filtered>true</filtered>
            <lineEnding>unix</lineEnding>
            <fileMode>0555</fileMode>
        </fileSet>
    </fileSets>
</assembly>
